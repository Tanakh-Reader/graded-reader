{
	"scripts": {
		"prepare": "npx husky install",
		"server": "cd src && poetry run python manage.py",
		"start": "cd src && ./../scripts/run-server",
		"start:dev": "export VERSION=DEV && npm run start",
		"start:staging": "export VERSION=STAGING && npm run start",
		"start:prod": "export VERSION=PROD && npm run start",
		"migrate": "npm run server makemigrations && npm run server migrate",
		"migrate:prod": "export VERSION=PROD && npm run migrate",
		"migrate:all": "npm run migrate && npm run migrate:prod",
		"push": "./scripts/git-push",
		"sync": "npm install && cd src && poetry lock && poetry install",
		"tw": "tailwindcss -i src/app/static/css/input.css -o src/app/static/css/output.css",
		"watch:tw": "npm run tw -- --watch",
		"lint": "cd src && poetry run python ../scripts/lint.py",
		"watch:lint": "node scripts/watcher.js"
	},
	"lint-staged": {
		"*.{js,css,json,html,py}": [
			"./scripts/lint-all"
		]
	},
	"devDependencies": {
		"@types/jquery": "^3.5.29",
		"autoprefixer": "^10.4.14",
		"concurrently": "^8.2.1",
		"husky": "^8.0.3",
		"lint-staged": "^14.0.1",
		"postcss": "^8.4.23",
		"prettier": "3.0",
		"prettier-plugin-tailwindcss": "^0.5.4",
		"tailwindcss": "^3.4.3"
	}
}
